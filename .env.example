# LiveKit Credentials
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_key
# TTS Provider (openai or cartesia)
TTS_PROVIDER=openai
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_STT_MODEL=whisper-1
OPENAI_LLM_MODEL=gpt-4o-mini

# Deepgram (Optional - if using Deepgram STT)
DEEPGRAM_API_KEY=your_deepgram_key

# Vobiz SIP Configuration
# Domain for outbound trunking
VOBIZ_SIP_DOMAIN=your-trunk-id.sip.vobiz.ai
VOBIZ_USERNAME=your_sip_username
VOBIZ_PASSWORD=your_sip_password

# Phone Numbers (E.164 format recommended)
VOBIZ_OUTBOUND_NUMBER=+91xxxxxxxxxx
VOBIZ_INBOUND_NUMBER=+91xxxxxxxxxx
